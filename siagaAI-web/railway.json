{
  "$schema": "https://railway.app/railway.json",
  "build": {
    "builder": "NIXPACKS",
    "buildCommand": "pip install -r backend/requirements.txt",
    "startCommand": "cd backend && python app.py"
  },
  "deploy": {
    "numReplicas": 1,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  },
  "nixpacks": {
    "pythonVersion": "3.12"
  }
}
